# PointCard.tsx

import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { IonicModule } from '@ionic/angular';
import { Router } from '@angular/router';

@Component({
  selector: 'app-accounts-list',
  templateUrl: './account-.component.html',
  styleUrls: ['./account-history.component.scss'],
  standalone: true,
  imports: [IonicModule, CommonModule]
})
export class PointCardComponent (
  <ion-button fill="outline" color="medium" (click)="Buscar()">
    <ion-icon name="arrow-back-outline" slot="start"></ion-icon>
    Buscar
  </ion-button>
)


# PointForm.tsx

import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { IonicModule } from '@ionic/angular';
import { Router } from '@angular/router';

@Component({
  selector: 'app-accounts-list',
  templateUrl: './account-.component.html',
  styleUrls: ['./account-history.component.scss'],
  standalone: true,
  imports: [IonicModule, CommonModule]
})
export class PointFormComponent (

  <ion-content class="ion-padding">

  <form (ngSubmit)="guardarCuenta()">
    <ion-item>
      <ion-label position="floating">Nombre</ion-label>
      <ion-input [(ngModel)]="nuevaCuenta.nombre" name="nombre" required></ion-input>
    </ion-item>

    <ion-item>
      <ion-label position="floating">Fecha</ion-label>
      <ion-datetime display-format="YYYY-MM-DD" [(ngModel)]="nuevaCuenta.fecha" name="fecha" required></ion-datetime>
    </ion-item>

    <ion-item>
      <ion-label position="floating">Descripción</ion-label>
      <ion-textarea [(ngModel)]="nuevaCuenta.descripcion" name="descripcion" required></ion-textarea>
    </ion-item>

    <ion-item>
      <ion-label position="floating">Valor</ion-label>
      <ion-input type="number" [(ngModel)]="nuevaCuenta.valor" name="valor" required></ion-input>
    </ion-item>

    <ion-button expand="block" color="success" class="guardar-btn" (click)="guardarCuenta()">
      Guardar Cuenta
    </ion-button>
  </form>
 
)

# PointsListView.tsx

<ion-list *ngIf="cuentas && cuentas.length > 0; else sinCuentas">
    <ion-item *ngFor="let cuenta of cuentas">
      <ion-label>
        <h2>{{ cuenta.nombre }}</h2>
        <p><strong>Descripción:</strong> {{ cuenta.descripcion }}</p>
        <p><strong>Fecha:</strong> {{ cuenta.fecha }}</p>
        <p><strong>Valor:</strong> ${{ cuenta.valor | number:'1.2-2' }}</p>
      </ion-label>

